<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:id="@+id/image_pager_activity_title"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#19ffffff"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/photo_backTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/margin_20"
                android:paddingTop="@dimen/margin_8"
                android:paddingBottom="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_10"
                android:src="@drawable/icon_back_32px"/>

            <TextView
                android:id="@+id/photo_allTitleName"
                style="@style/font_r_size_1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_18"
                android:textStyle="bold"
                android:text="1/1" />

            <ImageView
                android:id="@+id/photo_delete"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_16"
                android:src="@drawable/icon_photo_preview_delete"
                />
        </RelativeLayout>
    </RelativeLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_big_imgpager_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <LinearLayout
        android:id="@+id/activity_big_imgpager_discover_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_20"
        >
    </LinearLayout>


    </FrameLayout>
</LinearLayout>